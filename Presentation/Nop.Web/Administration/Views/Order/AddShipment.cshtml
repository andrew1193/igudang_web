    });

    $("#shipment-save").click(function() {
        var pickupdate = $("#NinjaVanPickupDate").val();
        if(pickupdate == null || pickupdate == ""){
            alert("Please select pickup date!");
            return false;
        }
        var parcelWeight = $("#ParcelWeight").val();
        if(parcelWeight <= 0){
            alert("Please fill in parcel weight!");
            return false;
        }

        return true;
    });

</script>