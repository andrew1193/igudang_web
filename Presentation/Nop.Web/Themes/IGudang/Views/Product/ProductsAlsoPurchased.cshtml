@model IList<ProductOverviewModel>

@using Nop.Web.Models.Catalog;

@if (Model.Count > 0)
{
    <div class="detail-title">
        <h3>People Also Viewed These Products</h3>
    </div>
    <div id="oc-images" class="owl-carousel image-carousel carousel-widget carousel-product col_full bottomborder pb-3 mb-2" data-margin="10" data-nav="false" data-items-xxs="1" data-items-xs="2" data-items-sm="3" data-items-lg="4">
        @foreach (var item in Model)
        {
            @Html.Partial("_ProductBox", item)
        }

    </div>

}

