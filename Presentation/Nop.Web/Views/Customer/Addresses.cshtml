                                                                {
                                                                    if (!String.IsNullOrEmpty(cityStateZip))
                                                                    {
                                                                        cityStateZip += " ";
                                                                    }
                                                                    cityStateZip += Model.BillingAddress.ZipPostalCode;
                                                                }
                                                            }
