@model IList<ProductTagModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <span class="tagged_as">
        @T("Products.Tags"):
        @for (int i = 0; i < Model.Count; i++)
        {
            <a href="@Url.RouteUrl("ProductsByTag", new { productTagId = Model[i].Id, SeName = Model[i].SeName })" rel="tag">
                @Model[i].Name
                <span>@T("Products.Tags.Count", Model[i].ProductCount)</span>
            </a>
            if (i != Model.Count - 1)
            {
                <text>,</text>
            }
        }
    </span>
}